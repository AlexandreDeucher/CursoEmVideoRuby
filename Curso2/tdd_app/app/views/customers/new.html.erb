<% if @customer.errors.any? %>
  <ul>
  <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<h1>Novo Cliente</h1>

<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br />

  <%= f.label :email %>
  <%= f.text_field :email %> <br />

  <%= f.label :phone %>
  <%= f.text_field :phone %> <br />

  <%= f.label :avatar %>
  <%= f.file_field :avatar %> <br />

  <%= f.label :smoker %> <br />
  <% {'S': 'Sim', 'N': 'NÃ£o'}.each do |key, value|  %>
    <%= f.radio_button :smoker, key %> <%= value %> <br />
    <%end%>

    <%= f.submit 'Criar Cliente' %>
<%end%>